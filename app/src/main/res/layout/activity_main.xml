<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
   
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/button1"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:text="Kare-Kare"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/orange"
                    />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:text="Lechon"
                    android:backgroundTint="@color/red"/>

                <Button
                    android:id="@+id/button3"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:text="Sisig"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/brown"/>

                 <Button
                    android:id="@+id/button4"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:text="Crispy Pata"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/light_brown"/>

                <Button
                    android:id="@+id/button5"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:text="Laing"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/light_green"/>

                <Button
                    android:id="@+id/button6"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:text="Bagnet"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/black_brown" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:text="Palabok"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/light_orange"/>

                <Button
                    android:id="@+id/button8"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:text="Leche Flan"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/gold"/>

                <Button
                    android:id="@+id/button9"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:text="Lumpiang Shanghai"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/golden_brown"/>

                <Button
                    android:id="@+id/button10"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:text="Adobong Pusit"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/black_black_gray"/>

            </LinearLayout>
        </HorizontalScrollView>
  </ScrollView>